@if (User.Identity.IsAuthenticated)
{
    <div class="btn-group">
        <button type="button" class="btn btn-outline-info btn-sm pull-right" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            @User.Identity.Name
        </button>
        <div class="dropdown-menu">
            <a class="dropdown-item" asp-controller="Cart" asp-action="History" >History</a>
            <a class="dropdown-item" asp-controller="Account" asp-action="Information">Profile</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a>
        </div>
    </div>
}
else
{
    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-info btn-sm pull-right">Login</a>
}
