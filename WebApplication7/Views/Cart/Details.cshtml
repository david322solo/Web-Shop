@model WebApplication7.ViewModels.DetailsViewModel

<div class="row wow fadeIn">

    <!--Grid column-->
    <div class="col-md-6 mb-4">

        <img src="data:@(Model.Product.ImageMimeType);base64,@(Convert.ToBase64String(Model.Product.ImageData))" class="img-fluid" alt="">

    </div>
    <!--Grid column-->
    <!--Grid column-->
    <div class="col-md-6 mb-4">

        <!--Content-->
        <div class="p-4">

            <div class="mb-3">
                <p class="lead font-weight-bold  text-secondary">@Model.Product.Name</p>
                <a asp-controller="Product" asp-action="List" asp-route-category="@Model.Product.Category">
                    <span class="badge purple mr-1">Category: @Model.Product.Category</span>
                </a>
                <span class="badge blue mr-1">Brand: @Model.Product.NameBrand</span>

            </div>

            <p class="lead">
                <span>Price:@Model.Product.Price $</span>
            </p>

            <p class="lead font-weight-bold">Description</p>

            <p>
                @Model.Product.Description
            </p>
            <form asp-action="AddToCart" asp-controller="Cart" asp-anti-forgery="true" class="d-flex justify-content-left">
                <input name="Id" value="@Model.Product.Id" type="hidden" />
                <input type="number" value="1" min="1" max="10" aria-label="Search" name="quantity" class="form-control" style="width: 100px">
                @Html.Hidden("returnUrl", @Context.Request.Path)
                <button class="btn btn-outline-info btn-sm pull-right m-0 ml-2" type="submit">
                    Add to cart
                    <i class="fas fa-shopping-cart ml-1"></i>
                </button>
            </form>
     
        </div>

    </div>

    <div>
        <a class="btn btn-outline-info btn-sm pull-right" href="@Model.ReturnUrl">Back to Shop</a>
    </div>
</div>