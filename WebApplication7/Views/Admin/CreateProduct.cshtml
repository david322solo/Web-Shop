@{
    Layout = "~/Views/Shared/_AdminLayout1.cshtml";
    ViewBag.Title = "Admin: Create Product";
}
@model WebApplication7.Models.Product
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Create Product</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="CreateProduct" asp-controller="Admin" enctype="multipart/form-data" id="quickForm">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Category" class="control-label"></label>
                                <select asp-for="Category" asp-items="ViewBag.Categories" class="form-control"></select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NameSezone" class="control-label"></label>
                                <select asp-for="NameSezone" asp-items="ViewBag.Sezones" class="form-control"></select>
                                <span asp-validation-for="NameSezone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NameBrand" class="control-label"></label>
                                <select asp-for="NameBrand" asp-items="ViewBag.Brands" class="form-control"></select>
                                <span asp-validation-for="NameBrand" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NameColore" class="control-label"></label>
                                <select asp-for="NameColore" asp-items="ViewBag.Colores" class="form-control"></select>
                                <span asp-validation-for="NameColore" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NameMaterial" class="control-label"></label>
                                <select asp-for="NameMaterial" asp-items=" ViewBag.Materials" class="form-control"></select>
                                <span asp-validation-for="NameMaterial" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" type="text" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <!-- <label for="customFile">Custom File</label> -->

                                <div class="custom-file">
                                    <input type="file" name="image" class="custom-file-input" id="customFile">
                                    <label class="custom-file-label" for="customFile">Choose file</label>
                                    <span asp-validation-for="ImageData" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <a asp-action="Index" asp-controller="Admin" asp-route-table="Product">Back to List</a>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>